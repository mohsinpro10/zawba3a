<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/lyt_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/cardBack"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.gdevs.firetvappbygdevelopers.Utils.SquareRelativeLayout
                android:id="@+id/squareImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/placeholder" />

            </com.gdevs.firetvappbygdevelopers.Utils.SquareRelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCategory"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:visibility="visible"
                android:gravity="center"
                android:layout_below="@id/squareImageView"
                android:layout_margin="10dp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mainCategory"
                android:textColor="@color/black"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>