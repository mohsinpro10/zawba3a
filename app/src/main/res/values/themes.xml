<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FireTvAppByGDevelopers"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="fontFamily">@font/custom_font</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FireTvAppByGDevelopers.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogCustomTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="SearchViewStyle" parent="Theme.FireTvAppByGDevelopers">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="SimpleSearchViewStyle">

        <!-- Change search textColor -->
        <item name="android:textColor">@color/tabText</item>

        <!-- Search bar/card background -->
        <item name="searchBackground">@drawable/side_nav_bar</item>

        <item name="cursorColor">@color/tabText</item>
        <item name="hintColor">@color/searchHint</item>

        <!-- Enable voice search -->
        <item name="voiceSearch">true</item>
    </style>

    <style name="Theme.FireTvAppByGDevelopers.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FireTvAppByGDevelopers.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>